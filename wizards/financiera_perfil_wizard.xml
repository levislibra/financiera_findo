<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Editar perfil findo del cliente -->

    <record id="findo_perfil_wizard" model="ir.ui.view">
        <field name="name">Cambiar perfil del cliente</field>
        <field name="model">financiera.findo.perfil.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id" invisible="1"/>
                    <field name="findo_name"/>
                    <field name="findo_mobile"/>
                    <field name="findo_perfil_letra"/>
                </group>
                <footer>
                    <button name="perfil_aplicar" string="Aplicar perfil" class="oe_right oe_highlight" type="object"/>
                    <button string="Cancel" class="oe_right" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>